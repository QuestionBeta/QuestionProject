@model DataBase.AppData.User
@using (Html.BeginForm("UpdateUser", "UserManage", FormMethod.Post, new { @id = "form" }))
{
    <input type="hidden" id="flag" name="flag"/>
    if (Model != null)
    {
    <input type="hidden" id="id" name="id" value="@Model.id"/>
    <div class="control-group">
        <label class="control-label">
            用户名:</label>
        <div class="controls">
            <input type="text" class="input_default" id="user_name" name="user_name" value="@Model.user_name" />
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">
            用户昵称:</label>
        <div class="controls">
            <input type="text" class="input_default" id="user_nick_name" name="user_nick_name" value="@Model.user_nick_name" />
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">
            登录名:</label>
        <div class="controls">
            <input type="text" class="input_default" id="user_login_name" name="user_login_name" value="@Model.user_login_name"/>
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">
            密码:</label>
        <div class="controls">
            <input type="text" class="input_default" id="user_pwd" name="user_pwd" value="@Model.user_pwd"/>
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">
            电话:</label>
        <div class="controls">
            <input type="text" class="input_default" id="user_tel" name="user_tel" value="@Model.user_tel"/>
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">
            邮箱:</label>
        <div class="controls">
            <input type="text" class="input_default" id="user_email" name="user_email" value="@Model.user_email"/>
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">
            角色:</label>
        <div class="controls">
            <input type="text" class="input_default" id="user_role" name="user_role" value="@Model.user_role"/>
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">
            用户状态:</label>
        <div class="controls">
            <select>
                @if (Model.isopen)
                {
                    <option value="@Model.isopen" selected="selected">启用</option>
                    <option value="!@Model.isopen">禁用</option>
                }
                else
                {
                    <option value="@Model.isopen" selected="selected">禁用</option>
                    <option value="!@Model.isopen">启用</option>
                }
            </select>
        </div>
    </div>
    <div class="control-submit">
        <div class="controls">
            <span style="padding-left: 100px;">
                <input type="button" id="btnsave" onclick="SaveBtn(false)" style="width: 50px" class="input_default"
                    value="提交" /></span> <span>
                        <input style="width: 50px" onclick="closeDialog(false)" type="button" id="btncancel"
                            class="input_default " value="取消" /></span>
        </div>
    </div>
    }
    else
    {
    <div class="control-group">
        <label class="control-label">
            用户名:</label>
        <div class="controls">
            <input type="text" class="input_default" id="user_name" name="user_name" />
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">
            用户昵称:</label>
        <div class="controls">
            <input type="text" class="input_default" id="user_nick_name" name="user_nick_name" />
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">
            登录名:</label>
        <div class="controls">
            <input type="text" class="input_default" id="user_login_name" name="user_login_name" />
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">
            密码:</label>
        <div class="controls">
            <input type="text" class="input_default" id="user_pwd" name="user_pwd" />
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">
            电话:</label>
        <div class="controls">
            <input type="text" class="input_default" id="user_tel" name="user_tel" />
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">
            邮箱:</label>
        <div class="controls">
            <input type="text" class="input_default" id="user_email" name="user_email" />
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">
            角色:</label>
        <div class="controls">
            <input type="text" class="input_default" id="user_role" name="user_role" />
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">
            用户状态:</label>
        <div class="controls">
           <select id="isopen" name="isopen">
                    <option value="true" selected="selected">启用</option>
                    <option value="false">禁用</option>
            </select>
        </div>
    </div>
    <div class="control-submit">
        <div class="controls">
            <span style="padding-left: 100px;">
                <input type="button" id="btnsave" onclick="SaveBtn(true)" style="width: 50px" class="input_default" value="提交" /></span> <span>
                        <input style="width: 50px" onclick="closeDialog(true)" type="button" id="btncancel" class="input_default " value="取消" /></span>
        </div>
    </div>
    }
}