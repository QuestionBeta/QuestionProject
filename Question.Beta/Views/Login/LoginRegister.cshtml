@model Shop.Web.Models.RegisterModel
@{
    ViewBag.Title = "新用户注册";
    Layout = null;
}
<link href="@Url.Content("~/Content/css/bootstrap.min.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/home_common.css")" rel="stylesheet" type="text/css" />
<script type="text/javascript" src="@Url.Content("~/Scripts/Question/jquery-1.9.1.min.js")"></script>
<script src="/Scripts/jquery.validate.min.js" type="text/javascript"></script>
<script src="/Scripts/jquery.validate.unobtrusive.js" type="text/javascript"></script>
<script type="text/javascript">
    var result = '@ViewBag.Data';
    var alertmsg = '';
    if (result != '') {
        alertmsg = result == 0 ? '注册成功' : '注册失败';
        window.parent.openAlert(alertmsg);
        location.href = "/";
    }
</script>
<div style="width: 98%; margin: auto;" class="login_form">
    @using (@Html.BeginForm("LoginRegister", "Login", FormMethod.Post, new { @id = "myform", @class = "form-horizontal" }))
    { @Html.ValidationSummary(true)
        <div class="divwin-bg" style="display: none;">
        </div>
        <div class="divwin">
        </div>

        <div class="form-group">
            <div class="col-sm-2 control-label">
                <span>*</span>@Html.LabelFor(model => model.user_login_name)
            </div>
            <div class="col-sm-10 content">
                @Html.TextBoxFor(model => model.user_login_name, new { @class = "form-control", @style = "width:300px;" })
                <span class="check">6-18位字母、数字的组合</span>
                @Html.ValidationMessageFor(model => model.user_login_name)
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-2 control-label">
                <span>*</span>@Html.LabelFor(model => model.user_show_name)
            </div>
            <div class="col-sm-10 content">
                @Html.TextBoxFor(model => model.user_show_name, new { @class = "form-control", @style = "width:300px;" })
                <span class="check">不能和用户名名称相同</span>
                @Html.ValidationMessageFor(model => model.user_show_name)
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-2 control-label">
                <span>*</span>@Html.LabelFor(model => model.user_email)
            </div>
            <div class="col-sm-10 content">
                @Html.TextBoxFor(model => model.user_email, new { @class = "form-control", @style = "width:300px;" })
                <span class="check">6-18位字母、数字的组合</span>
                @Html.ValidationMessageFor(model => model.user_email)
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-2 control-label">
                <span>*</span>@Html.LabelFor(model => model.user_pwd)
            </div>
            <div class="col-sm-10 content">
                @Html.PasswordFor(model => model.user_pwd, new { @class = "form-control", @style = "width:300px;" })
                <span class="check">6-18位字母、数字的组合</span>
                @Html.ValidationMessageFor(model => model.user_pwd)
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-2 control-label">
                <span>*</span>@Html.LabelFor(model => model.user_repeat_pwd)
            </div>
            <div class="col-sm-10 content">
                @Html.PasswordFor(model => model.user_repeat_pwd, new { @class = "form-control", @style = "width:300px;" })
                <span class="check">6-18位字母、数字的组合</span>
                @Html.ValidationMessageFor(model => model.user_repeat_pwd)
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-2 control-label">
                <span>*</span>@Html.LabelFor(model => model.validate_code)
            </div>
            <div class="col-sm-10 content">
                @Html.TextBoxFor(model => model.validate_code, new { @class = "form-control vel" })
                <a>
                    <img id="img_captcha" onclick="javascript:this.src+='?';" alt="验证码" style="width: 120px;
                        height: 30px; vertical-align: middle" src="InitValidateCode">
                </a><a href="#" onclick="javascript:document.getElementById('img_captcha').src = document.getElementById('img_captcha').src + '?'; return false;">
                    看不清楚，换一张</a>
                @Html.ValidationMessageFor(model => model.validate_code)
            </div>
        </div>
        <div class="form-group modal-footer " style="height:64px; text-align:center">
            <div>
                 <button type="submit" class="btn btn-danger btn-primary btn-lg" id="loginButton" style="width:100%" >
                        注册</button>
            </div>
        </div>
        <div class="clear">
        </div>
    }
</div>
