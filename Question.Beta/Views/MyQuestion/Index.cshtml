                    <h5>
                        最新动态</h5>
                </div>
                <ul class="nav bs-docs-sidenav">
                    <li class="">
                        <ul class="nav">
                            @Html.Partial("LoadLastedActicle", (List<DataBase.AppData.XFX_Bug>)ViewBag.NewsList)
                        </ul>
                    </li>
                </ul>
                <div style="padding: 5px; border-bottom: 1px solid #eaeaea">
                    <h5>
                        所有分类</h5>
                </div>
                <ul class="nav bs-docs-sidenav">
                    <li class="">
                    
                        <ul class="nav" id="nav_b">
                            @Html.Partial("LoadCategory", (List<DataBase.AppData.Category>)ViewBag.Category)
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>
