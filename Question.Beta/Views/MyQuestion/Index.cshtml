<div class="container content">
    <div class="row">
        <div class="col-md-9" role="main">
            <div  style="width: 100%; padding: 5px" id="data_list">
                @Html.Partial("LoadData", (List<DataBase.AppData.XFX_Bug>)ViewBag.List)
            </div>
        </div>
        <div class="col-md-3">
            <div role="complementary" class="bs-docs-sidebar hidden-print hidden-xs hidden-sm affix-top">
